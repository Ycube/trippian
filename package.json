{
  "name": "trippian",
  "version": "1.0.0",
  "description": "your local travel companion ",
  "main": "src/entry.js",
  "scripts": {
    "commit": "git-cz",
    "test": "mocha src/index.spec.js -w",
    "check-coverage": "istanbul check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "test:single": "istanbul cover -x *.test.js _mocha -- -R spec src/index.spec.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trippian/trippian.git"
  },
  "keywords": [
    "trippian",
    "travel"
  ],
  "author": "Trippian Team(https://github.com/trippian)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/trippian/trippian/issues"
  },
  "homepage": "https://github.com/trippian/trippian#readme",
  "dependencies": {
    "lodash": "4.0.0"
  },
  "devDependencies": {
    "commitizen": "2.5.0",
    "chai": "3.4.1",
    "codecov.io": "0.1.6",
    "cz-conventional-changelog": "1.1.5",
    "ghooks": "1.0.3",
    "istanbul": "0.4.2",
    "mocha": "2.3.4",
    "semantic-release": "^4.3.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run test:single && npm run check-coverage"
    }
  }
}
